{
  "compilerOptions": {
    "module": "CommonJS", 
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",  // Esto indica que los archivos .js se generarán en la carpeta dist
    "rootDir": "./src"   // Esto indica que los archivos .ts están en la carpeta src
  },
  "include": ["src/**/*.ts"], 
  "exclude": ["node_modules"]
}
